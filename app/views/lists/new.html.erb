<div class="container mt-3">
  <div class="row">
    <div class="col-6 m-auto">
      <h1 class="text-center">Create a list</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.submit "Create", class: "btn btn-secondary w-100" %>
      <% end %>
      <%= link_to 'Back', lists_path, class: 'btn btn-light w-100 mt-3 text-secondary border' %>
    </div>
  </div>
</div>
